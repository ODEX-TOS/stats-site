{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/package.js') }}"></script>
{% endblock %}

{% block title %}Package statistics{% endblock %}

{% block body %}
    <h1 class="mb-4">Package statistics</h1>
    <table id="pkgstats" class="table table-striped table-bordered table-sm" width="100%" cellspacing="0"
           data-ajax="{{ path('app_packagestatistics_datatables') }}"
           data-search-url="https://www.archlinux.de/packages">
        <thead>
        <tr>
            <th>Package</th>
            <th>Usage</th>
        </tr>
        </thead>
    </table>
{% endblock %}
